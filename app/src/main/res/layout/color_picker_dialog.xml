<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:columnCount="2">

            <ImageView
                android:id="@+id/color_picker_green"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/color_green" />

            <ImageView
                android:id="@+id/color_picker_blue"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/color_blue" />

            <ImageView
                android:id="@+id/color_picker_yellow"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/color_yellow" />

            <ImageView
                android:id="@+id/color_picker_pink"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/color_pink" />

        </GridLayout>

</androidx.cardview.widget.CardView>